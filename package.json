{
  "displayName": "PathFinder",
  "name": "@disqada/pathfinder",
  "version": "2.0.3",
  "description": "Easily find files in chosen directories in your project",
  "scripts": {
    "types": "workspace ./workspace.json -t",
    "docs": "workspace ./workspace.json -t -d",
    "lint": "eslint . --fix --ignore-path .gitignore",
    "format": "prettier . --write --ignore-path .gitignore",
    "test": "mocha ./tests/**/*.test.js"
  },
  "type": "commonjs",
  "main": "./src/exports.js",
  "types": "./types/exports.d.ts",
  "exports": {
    ".": {
      "import": "./src/exports.mjs",
      "require": "./src/exports.js",
      "default": "./src/exports.js",
      "types": "./types/exports.d.ts"
    }
  },
  "files": [
    "src/",
    "types/",
    "CHANGELOG.md",
    "README.md",
    "LICENSE.txt"
  ],
  "homepage": "https://disqada.github.io/PathFinder",
  "repository": {
    "type": "git",
    "url": "https://github.com/DisQada/PathFinder.git"
  },
  "bugs": {
    "url": "https://github.com/DisQada/PathFinder/issues"
  },
  "keywords": [
    "find",
    "finder",
    "search",
    "path",
    "paths",
    "directory",
    "folder",
    "file"
  ],
  "author": {
    "name": "The Alpha",
    "email": "contact@nabilalsaiad.com",
    "url": "https://links.nabilalsaiad.com"
  },
  "license": "Apache-2.0",
  "devDependencies": {
    "@disqada/workspace": "^1.5.1",
    "@types/node": "^20.11.19",
    "eslint": "*",
    "eslint-plugin-import": "*",
    "eslint-plugin-jsdoc": "*",
    "eslint-plugin-mocha": "^10.3.0",
    "eslint-plugin-promise": "*",
    "mocha": "^10.3.0",
    "prettier": "*"
  }
}
