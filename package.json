{
    "displayName": "PathFinder",
    "name": "@disqada/pathfinder",
    "version": "2.0.2",
    "description": "Easily find files in chosen directories in your project",
    "scripts": {
        "config": "npm explore @disqada/typedoc -- npm run config",
        "types": "npm explore @disqada/typedoc -- npm run types",
        "docs": "npm explore @disqada/typedoc -- npm run docs",
        "lint": "eslint . --fix",
        "format": "prettier . --write",
        "test": "jest",
        "commit": "git-cz",
        "semantic-release": "semantic-release"
    },
    "type": "commonjs",
    "main": "./src/exports.js",
    "module": "./src/exports.js",
    "types": "./types/exports.d.ts",
    "exports": {
        ".": {
            "node": "./src/exports.js",
            "require": "./src/exports.js",
            "import": "./src/exports.js",
            "types": "./types/exports.d.ts",
            "default": "./src/exports.js"
        }
    },
    "files": [
        "src/",
        "types/",
        "CHANGELOG.md",
        "README.md",
        "LICENSE"
    ],
    "homepage": "https://disqada.github.io/PathFinder",
    "repository": {
        "type": "git",
        "url": "https://github.com/DisQada/PathFinder.git"
    },
    "bugs": {
        "url": "https://github.com/DisQada/PathFinder/issues"
    },
    "keywords": [
        "find",
        "search",
        "path",
        "paths",
        "directory",
        "folder",
        "file",
        "finder"
    ],
    "author": {
        "name": "The Alpha",
        "email": "contact@nabilalsaiad.com",
        "url": "https://links.nabilalsaiad.com"
    },
    "license": "Apache-2.0",
    "devDependencies": {
        "@disqada/typedoc": "^1.2.0",
        "@types/jest": "*",
        "eslint": "*",
        "eslint-plugin-import": "*",
        "eslint-plugin-jest": "*",
        "eslint-plugin-jsdoc": "*",
        "eslint-plugin-promise": "*",
        "prettier": "*"
    },
    "publishConfig": {
        "access": "public"
    },
    "config": {
        "commitizen": {
            "path": "./node_modules/cz-conventional-changelog"
        }
    }
}
